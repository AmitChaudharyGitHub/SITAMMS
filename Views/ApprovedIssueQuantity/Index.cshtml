<script>
    function GetFloor() {

        var url = '@Url.Action("Details", "ApprovedIssueQuantity")';
        $('#progress').show();
        $.ajax({
            url: url,
            type: 'GET',
            data: { id: $("#indent1 option:selected").text() },
            complete: function () {
                $('#progress').hide();
            },
            success: function (result) {

                $('#formbody').html(result);
            }
        });
        return false;
    }

</script>






