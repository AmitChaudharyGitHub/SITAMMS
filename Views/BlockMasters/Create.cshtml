@model BusinessObjects.Entity.BlockMaster

@{
    ViewBag.Title = "Create";

    string layout = "";
    var cheking = Session["EmailCheck"].ToString();
    if (cheking == "admin@sitanet.in")
    {
        layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        layout = "~/Views/Shared/_Layout.cshtml";//
    }

    Layout = layout;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<section id="content_wrapper">
    <!-- Begin: Content -->
    <section id="content" class="table-layout animated fadeIn">

        <!-- begin: .tray-center -->
        <div class="tray tray-center">

            <div class="mw1000 center-block">

                <!-- Begin: Content Header -->
                <!-- Begin: Admin Form -->
                <div class="admin-form">

                    <div class="panel heading-border">
                        <div class="panel-body bg-light">
                            <form method="post" action="#" id="form-ui">
                                <div class="section-divider mb40" id="spy1">
                                    <span>BLOCK MASTER</span>
                                </div>
                                <!-- .section-divider -->
                                <!-- Basic Inputs -->
                                <!-- Input Icons -->
                                @*<p>
                            @Html.ActionLink("Create New", "Create")
                        </p>*@
                                <div class="row">

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                    
                                            
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <div class="section">
                                                        @Html.LabelFor(model => model.SiteId, "Site Id", htmlAttributes: new { @class = "lable" })
                                                    </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="section">
                                                           

                                                            <label class="field select">
                                                                @Html.DropDownList("SiteId", null, htmlAttributes: new { @class = "form-control gui-input" })
                                                                @Html.ValidationMessageFor(model => model.SiteId, "", new { @class = "text-danger" })
                                                                <i class="arrow"></i>
                                                            </label>

                                                        </div>
                                                    </div>

                                                    <div class="col-md-2">
                                                        @Html.LabelFor(model => model.BlockName, "Block Name", htmlAttributes: new { @class = "control-label col-md-2" })
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="section">


                                                            <label class="field prepend-icon">
                                                                @Html.EditorFor(model => model.BlockName, new { htmlAttributes = new { @class = "form-control gui-input" } })
                                                                @Html.ValidationMessageFor(model => model.BlockName, "", new { @class = "text-danger" })

                                                                <label for="firstname" class="field-icon">
                                                                    <i class="fa fa-building"></i>
                                                                </label>
                                                            </label>
                                                        </div>
                                                    </div>



                                                    <div class="col-md-2">
                                                        <div class="section">
                                                            <span id="progress" class="text-center" style="display: none;">
                                                                <img src="/images/wait.gif" alt="wiat" />
                                                                Wait..
                                                            </span>

                                                            <input class="btn btn-primary" type="submit" value="Save" />
                                                            @*<button class="btn btn-warning" data-dismiss="modal">Close</button>*@
                                                        </div>
                                                    </div>
                                                </div>
                                    }

                                    <div>
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
                                    </div>
                                </div>
                                <div class="section-divider mt40 mb25" id="spy5">
                                    <span></span>
                                </div>

                                <!-- end .section row section -->
                                <!-- end .form-footer section -->
                            </form>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!-- end: .tray-center -->
        <!-- begin: .tray-right -->
        <!-- end: .tray-right -->

    </section>
    <!-- End: Content -->
</section>
