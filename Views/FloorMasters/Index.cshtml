    function GetFloor() {
        //var url = "/FloorMasters/Grid/";
        var url = '@Url.Action("Grid", "FloorMasters")';
        $('#progress').show();
        $.ajax({
            url: url,
            type: 'GET',
            data: { BlockId: $('#ddlBlock').val() },
            complete: function () {
                $('#progress').hide();
            },
            success: function (result) {
                $('#formbody').html(result);
            }
        });
        return false;
    }
</script>


