@model MMS_P.ViewModels.GateEntryDetailModel

@{
    ViewBag.Title = "Index";
    string layout = "";
    var cheking = Session["EmailCheck"].ToString();
    if (cheking == "admin@sitanet.in")
    {
        layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        layout = "~/Views/Shared/_Layout.cshtml";//
    }

    Layout = layout;

}

<section id="content_wrapper">

    <section id="content" class="table-layout animated fadeIn">


        <div class="tray tray-center">

            <div class="mw1000 center-block">

                <div class="admin-form">

                    <div class="panel heading-border">
                        <div class="panel-body bg-light">
                            @*<form method="post" action="#" id="form-ui">*@
                                <div class="section-divider mb40" id="spy1">
                                    <span>Transfer From Other Site  Created By @Model.Master.CreaterName  </span>
                                    <span>  Date is @Html.DisplayFor(model => model.Master.Date2)</span>
                                </div>
                            <table><tr><td>
                                           <dl class="dl-horizontal">
                                               <dt>
                                                   @Html.DisplayNameFor(model => model.Master.ProjectName)
                                               </dt>

                                               <dd>
                                                   @Html.DisplayFor(model => model.Master.ProjectName)
                                               </dd>
                                               <dt>
                                                   @Html.DisplayNameFor(model => model.Master.GateEntryNo)
                                               </dt>

                                               <dd>
                                                   @Html.DisplayFor(model => model.Master.GateEntryNo)
                                               </dd>

                                            
                                               <dt>
                                                   @Html.DisplayNameFor(model => model.Master.Time)
                                               </dt>
                                               <dd>
                                                   @Html.DisplayFor(model => model.Master.Time)
                                               </dd>
                                               <dt>
                                                   @Html.DisplayName("Gate Entry Type")
                                               </dt>
                                               <dd>
                                                   @Html.DisplayFor(model => model.Master.Status)
                                               </dd>
                                           </dl>

                                </td>><td>
                                          <dl class="dl-horizontal">
                                             
                                              <dt>
                                                  @Html.DisplayNameFor(model => model.Master.ChallanNo)
                                              </dt>

                                              <dd>
                                                  @Html.DisplayFor(model => model.Master.ChallanNo)
                                              </dd>
                                              <dt>
                                                  @Html.DisplayNameFor(model => model.Master.ChallanDate)
                                              </dt>

                                              <dd>
                                                  @Html.DisplayFor(model => model.Master.ChallanDate2)
                                              </dd>
                                              <dt>
                                                  @Html.DisplayNameFor(model => model.Master.VehicleNo)
                                              </dt>

                                              <dd>
                                                  @Html.DisplayFor(model => model.Master.VehicleNo)
                                              </dd>
                                              <dt>
                                                  @Html.DisplayName("Gate Entry Type No")
                                              </dt>
                                              <dd>
                                                  @Html.DisplayFor(model => model.Master.StatusTypeNo)
                                              </dd>
                                          </dl>

                                </td></tr></table>
                            @if (Model.Child.Count != 0)
                            {
                                <div id="myPager" style="margin-top:17px;">
                                    @{
                                var grid = new WebGrid(
                                                canPage: false,

                                                canSort: false,
                                                ajaxUpdateContainerId: "grid");

                                grid.Bind(Model.Child, autoSortAndPage: false);
                                //grid.Pager(WebGridPagerModes.All);

                                @grid.GetHtml(htmlAttributes: new { id = "grid" },
            fillEmptyRows: false,
            tableStyle: "table table-bordered table-hover",
            mode: WebGridPagerModes.All,
            columns: grid.Columns(
                                                     grid.Column("Status",
                             header: "Gate Entry Type"),
                 grid.Column("StatusTypeNo",
                                           header: "Gate Entry Type No"

              ), grid.Column("ItemGroup",
                                                                      header: "Group"

                                         ), grid.Column("Item",
                                                                 header: "Item"

                                    ),
                   grid.Column("ReceiveQty",
                                                         header: "Receive"

                                ),
                        grid.Column("ProjectName",
                                                              header: "Receive By"

                                     ),
                             grid.Column("Vendor",
                                                                   header: "Dispatch By"

                                     )
             



                                                                                                                                         ));
                                    }


                                </div>

                            }
                          
                        </div>
                   

                        <div class="section-divider mt40 mb25" id="spy5">
                            <span></span>
                        </div>
                        <p>
                       
                            @*@Html.ActionLink("Back to List", "Index")*@
                        </p>


                    </div>
                </div>

            </div>

        </div>


    </section>

</section>