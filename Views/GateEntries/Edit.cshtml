    { ChallanDate = (DateTime)ViewBag.ChallanDate; }
}
<style type="text/css">
    #dvLoading {
        background: #000 url(../../Images/36.gif) no-repeat center center;
        height: 100px;
        width: 100px;
        position: fixed;
        z-index: 1000;
        left: 50%;
        top: 50%;
        margin: -25px 0 0 -25px;
    }
</style>
<style>
    .Piv1 {
        display: normal;
    }
     .Piv2 {
        display: none;
