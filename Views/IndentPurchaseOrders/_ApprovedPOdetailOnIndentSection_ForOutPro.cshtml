    <style type="text/css">
         td {
            text-align: center;
        }

        table tr td {
            font-size: 12px;
        }
        .tblEmployee {
            font-family: verdana,arial,sans-serif;
            font-size: 11px;
            color: #333333;
            border-width: 1px;
            border-color: #666666;
