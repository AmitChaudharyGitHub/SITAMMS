<div id="myPager" style="margin-top:17px;" class="primary">


    @{
        var grid = new WebGrid(
                        canPage: true,
                        rowsPerPage: 1000,
                        canSort: true,
                        ajaxUpdateContainerId: "grid");

        grid.Bind(Model.itemsde, rowCount: Model.TotalRows, autoSortAndPage: true);
        grid.Pager(WebGridPagerModes.All);

        @grid.GetHtml(htmlAttributes: new { id = "grid" },
            fillEmptyRows: false,
             tableStyle: "webgrid-table",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                rowStyle: "webgrid-row-style",
            mode: WebGridPagerModes.All,
                              columns: grid.Columns(
                              grid.Column("ItemName", header: "Item Name"),
                                 //grid.Column("Remark", header: "Remark"),
                                 grid.Column("UnitID", header: "Unit Name"),
                                 grid.Column("Opening", header: "Opening"),
                                 grid.Column("IssueQuantity", header: "Issue Qty"),
                                 grid.Column("ReceiveQty", header: "Receive Qty"),
                                 grid.Column("BalanceQuantity", header: "Balance Qty")
                               //grid.Column("CreatedDate", header: "Date", format: item => ((item.CreatedDate == null) ? "" : item.CreatedDate.ToString("dd/MM/yyyy")))



                               ));
    }


</div>

