@model MMS_P.ViewModels.PurchaseIR

@{
    ViewBag.Title = "Index";

    string layout = "";
    var cheking = Session["EmailCheck"].ToString();
    if (cheking == "admin@sitanet.in")
    {
        layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        layout = "~/Views/Shared/_Layout.cshtml";//
    }

    Layout = layout;
}

<section id="content_wrapper">

    <section id="content" class="table-layout animated fadeIn">


        <div class="tray tray-center">

            <div class="mw1000 center-block">

                <div class="admin-form">

                    <div class="panel heading-border">
                        <div class="panel-body bg-light">
                            @*<form method="post" action="#" id="form-ui">*@
                                <div class="section-divider mb40" id="spy1">
                                    <span> Purchase Indent Created By @Model.Master.CreatedByName  </span>
                                    <span>  for @Model.Master.SendToName  and Date is @Html.DisplayFor(model => model.Master.Date2)</span>
                                </div>
                            <table><tr><td>
                                           <dl class="dl-horizontal">
                                               <dt>
                                                   @Html.DisplayNameFor(model => model.Master.ProjectName)
                                               </dt>

                                               <dd>
                                                   @Html.DisplayFor(model => model.Master.ProjectName)
                                               </dd>
                                               <dt>
                                                   @Html.DisplayNameFor(model => model.Master.PurRequisitionNo)
                                               </dt>

                                               <dd>
                                                   @Html.DisplayFor(model => model.Master.PurRequisitionNo)
                                               </dd>

                                             
                                             
                                           </dl>

                                </td></tr></table>
                            @if (Model.Child.Count != 0)
                            {
                                <table class="table table-hover" id="grid">
                               
                                    <tr class="primary">


                                        <th>
                                            @Html.DisplayName("SrNo.")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Group Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Item Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Unit")
                                        </th>
                                       

                                        <th>
                                            @Html.DisplayName("Demand Qty")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Approve Qty")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Ordered Qty")
                                        </th>

                                    </tr>

                                    @foreach (var item in Model.Child)
                                    {
                                        var a = @item.UId;
                                        var It = @item.ItemNo;
                                  

                                        <tr id=@a>

                                            <td class=SrNo_@a uid=@a it=@It >
                                                @Html.DisplayFor(modelItem => item.SNo)
                                            </td>
                                            <td class=Group_@a>
                                                @Html.DisplayFor(modelItem => item.ItemGroupName)
                                            </td>
                                            <td class=Item_@a>
                                                @Html.DisplayFor(modelItem => item.ItemName)
                                            </td>
                                            <td class=Unit_@a>
                                                @Html.DisplayFor(modelItem => item.Unit)
                                            </td>

                                           

                                            <td>
                                                <span class="checkVal" id=Qty_@a>
                                                    @Html.TextBoxFor(modelItem => item.DemandQty, new { disabled = "disabled", @readonly = "readonly" })
                                                </span>
                                            </td>
                                            <td>
                                                <span class="checkVal" id=PReceive_@a>
                                                    @Html.TextBoxFor(modelItem => item.ApprovedQty, new { disabled = "disabled", @readonly = "readonly", @placeholder = "0" })
                                                </span>
                                            </td>
                                         
                                            <td>
                                                <span class="checkVal" id=POrder_@a>
                                                    @Html.TextBoxFor(modelItem => item.OrderedQty, new { disabled = "disabled", @readonly = "readonly", @placeholder = "0" })
                                                </span>
                                            </td>

                                        </tr>
                                    }

                                </table>

                            }
                          
                        </div>
              

                        <div class="section-divider mt40 mb25" id="spy5">
                            <span></span>
                        </div>
                        @*<p>
                       
                            @Html.ActionLink("Back to List", "Index2")
                        </p>*@


                    </div>
                </div>

            </div>

        </div>


    </section>

</section>