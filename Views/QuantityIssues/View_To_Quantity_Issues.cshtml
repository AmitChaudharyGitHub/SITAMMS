
@{
    ViewBag.Title = "View_To_Quantity_Issues";
    string layout = "";
    var cheking = Session["EmailCheck"].ToString();
    if (cheking == "admin@sitanet.in")
    {
        layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        layout = "~/Views/Shared/_Layout.cshtml";//
    }

    Layout = layout;
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<style type="text/css">
    #dvLoading {
        background:#000 url(../../Images/36.gif) no-repeat center center;
   height: 100px;
   width: 100px;
   position: fixed;
   z-index: 1000;
   left: 50%;
   top: 50%;
   margin: -25px 0 0 -25px;
    }
</style>

<script>
    $(window).load(function () {
        $('#dvLoading').fadeOut(2000);
    });
</script>





<script>
function GetFloors()

{
        //var url = "/FloorMasters/Grid/";
        var url = '@Url.Action("_PartialView_For_View_Quantity_Issue", "QuantityIssues")';
    $('#progress').show();
        $.ajax({
        url: url,
        type: 'GET',
        data: { Status: $('#Stats').val(), PId: $('#prjtid').val() },
        complete: function () {
          $('#progress').hide();
        },
        success: function (result) {

        $('#formbody').html(result);
        }
        });
        return false;
 }

</script>


<script type="text/javascript">
    $(document).ready(function () {
        //Country Dropdown Selectedchange event
        $("#Stats").change(function () {

            $("#prjtid").val('');
        })
    });
</script>






