                                                            @Html.DropDownList("prjtid", (IEnumerable<SelectListItem>)ViewBag.prjtid, "Select Project", htmlAttributes: new { @class = "form-control", @onchange = "javascript:GetFloors(this.value);", })
                                                            <i class="arrow"></i>
