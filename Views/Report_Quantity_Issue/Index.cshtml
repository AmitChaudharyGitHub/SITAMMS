@* Get Date wise Data *@
<script>
    function GetDatewise() {
        //var url = "/FloorMasters/Grid/";
        var url = '@Url.Action("DatewiseSearch", "Report_Quantity_Issue")';
        $('#progress').show(); 
        $('#div1hid').hide();
        $.ajax({
            url: url,
            type: 'GET',
            data: { Date1: $('#firstdate').val(), Date2: $('#lastdate').val() },
            complete: function () {
                $('#progress').hide();
                $('#div1hid').hide();
            },
            success: function (result) {

                $('#formbody').html(result);
                $('#div1hid').hide();
            }
        });
        return false;
    }

</script>






