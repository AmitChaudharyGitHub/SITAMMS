                </tr>
                <tr>
                    <td style="width:20%;"><b>State</b></td>
                    <td style="width:80%;"><label>@ViewBag.VendorStateName</label></td>
                </tr>
                <tr>
                    <td style="width:20%;"><b>State Code</b></td>
                    <td style="width:80%;"><label></label></td>
                </tr>
                <tr>
                    <td style="width:20%;"><b>GSTIN</b></td>
                    <td style="width:80%;"><label>@ViewBag.VendorGSTNo</label></td>
                </tr>
            </table>

