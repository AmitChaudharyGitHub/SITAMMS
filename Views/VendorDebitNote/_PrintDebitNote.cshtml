                    <th>S.No</th>
                    <th colspan="3">Description of Item/Service/Combination</th>
                    <th>HSN Code</th>
                    <th>Unit</th>
                    <th>Qty.</th>
                    <th>Rate (After Discount)</th>
                    <th>Amount(After Discount)</th>
                    <th>GST Rate</th>
                    <th>Total</th>

                </tr>

                @{ int i = 0;}
