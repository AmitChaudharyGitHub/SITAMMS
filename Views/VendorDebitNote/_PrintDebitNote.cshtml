                {
                    <tr>
                        <td><label>@(++i)</label></td>
                        <td colspan="3"><label>@item.ItemName</label></td>
                        <td><label></label></td>
                        <td><label>@item.Unit</label></td>
                        <td><label>@item.TransferQty</label></td>
                        <td><label>@item.Rate</label></td>
                        <td><label>@item.Total</label></td>
                        <td><label>@item.TotalGSTAmount</label></td>
                        <td><label>@item.GrossAmount</label></td>
                    </tr>
                }
