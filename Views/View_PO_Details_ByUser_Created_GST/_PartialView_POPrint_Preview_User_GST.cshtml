                                    if (!taxType.ToLower().Contains("igst"))
                                    {
                                        <td>@c.CGSTPercentage</td>
                                        <td>@c.SGSTAndUTGSTPercentage</td>
                                    }
                                    else {
                                        <td>@c.IGST</td>
