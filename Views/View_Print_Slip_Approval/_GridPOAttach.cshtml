@model List<MMS.DAL.tbl_PurchaseOrderAttachFiles>
@{
    Layout = null;
}


<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th><b>Attachment</b></th>
            <th><b>Attachment Name</b></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attach in Model)
        {
            <tr>
                <td><a target="_blank" href="/PurchaseOrderAttachment/@attach.AttachFile">Download</a></td>
                <td>@attach.AttachFile_Name</td>
            </tr>
        }

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="2">No Attachment Found!</td>
            </tr>
        }
    </tbody>
</table>

