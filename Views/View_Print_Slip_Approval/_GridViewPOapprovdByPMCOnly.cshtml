<script>
    function GetRmrkpopmc() {
        debugger;
       
        var url = '@Url.Action("GetAllPORemarks", "View_Print_Slip_Approval")';

        $.ajax({
            url: url,
            type: 'GET',
            data: { Status: $('#text1').val() },
            complete: function () {
                $('#progress').hide();
            },
            success: function (result) {

                $('#formbody').html(result);
            }
        });
        return false;
    }
</script>


<div id="myPager" style="margin-top:17px;" class="primary">


    @{
        var grid = new WebGrid(
                        canPage: true,
                        rowsPerPage: 10,
                        canSort: true,
                        ajaxUpdateContainerId: "grid2");

        grid.Bind(Model.GetDetails_Approved_PO_Slip);
        grid.Pager(WebGridPagerModes.All);

        @grid.GetHtml(htmlAttributes: new { id = "grid2" },
            fillEmptyRows: false,
            tableStyle: "webgrid-table",
                headerStyle: "webgrid-header",
               footerStyle: "gridFooter",
                alternatingRowStyle: "webgrid-alternating-row",
                rowStyle: "webgrid-row-style",
            mode: WebGridPagerModes.All,
                              columns: grid.Columns(
                               grid.Column("Purchase_Order_Indent_No", header: "P.O. Number", canSort: false, format: @<text>@Html.ActionLink((string)item.Purchase_Order_Indent_No, "GetPO_details", new { id = ((string)item.Purchase_Order_Indent_No).Replace("/", "#") }, new { @class = "viewDetpopmc", @id = "text1", @onchange = "javascript:GetdispvFloors(this.value);", @style = "color:#497bf9" })</text>),
                               grid.Column("CreatedDate", header: "P.O. Date", canSort: false, format:@<text> @item.CreatedDate.ToString("dd/MM/yyyy")</text>),
                               grid.Column("POCreatedDate", header: "P.O. Created Date", canSort: false, format:@<text> @item.POCreatedDate.ToString("dd/MM/yyyy")</text>),
                               grid.Column("Vendor_Name", header: "Vendor Name", canSort: false),
                                grid.Column("Status", header: "Status", canSort: false),
                               grid.Column("Send_To", header: "Send To", canSort: false),
                               grid.Column("SendBy", header: "Send By", canSort: false),
                               grid.Column("QuotID", header: "Quotation Detail", canSort: false, format: @<text> @Html.ActionLink("View", "ViewQuotDetail", "Quotation", new { Id = item.QuotID }, new { target = "_blank", @style = "color:#497bf9" }) </text>),
                              grid.Column("Purchase_Order_Indent_No", header: "Remarks", style: "aaaa", canSort: false, format: @<text> @Html.ActionLink("View", "GetAllPORemarks", new { PO = ((string)item.Purchase_Order_Indent_No).Replace("/", "#") }, new { @class = "poremarksdsapprvd", @id = "text1", @onchange = "javascript:GetRmrkpopmc(this.value);", @style = "color:#497bf9" })</text>),
                              grid.Column("Purchase_Order_Indent_No", header: "Attachment", style: "aaaa", canSort: false, format: @<text> @Html.ActionLink("View", "GetPurchaseOrderAttachment", new { PO_No = ((string)item.Purchase_Order_Indent_No).Replace("/", "#") }, new { @class = "poAttachmentAP", @id = "text1", @style = "color:#497bf9" })</text>)



                               ));
}


</div>

