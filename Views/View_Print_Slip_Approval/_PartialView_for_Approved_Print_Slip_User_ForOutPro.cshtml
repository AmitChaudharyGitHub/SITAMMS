        <p><strong>Order For: </strong> @Model.HeaderData.PODescription</p>

        <div class="panel-body pn">

            @{int rowNo = 1; var gstamt = Model.ItemData[0].CGSTAmt; int cols = 0; var taxType = Model.ItemData[0].TaxType;}
            @if (Model.HeaderData.TCSActive)
            {
                if (!taxType.ToLower().Contains("igst"))
                {
                    cols = 18;
                }
                else {
                    cols = 16;
                }
            }
            else
            {
                cols = 16;
            }
            
            <table id="t01" width="100%" style="font-size:10px;" cellpadding="4" cellspacing="0" border="1">
                <thead>
                    <tr>
                        <th rowspan="2">S.No.</th>
                        <th colspan=@cols style="text-align:center">Description</th>
                        <th>HSN Code</th>
                        <th>Item Code</th>
                        @if (!Model.HeaderData.TCSActive)
                        {
                            <th>Unit</th>
                        }
                    </tr>
                    <tr>
                        @if (Model.HeaderData.TCSActive)
                        {
                            <th>Unit</th>
                        }
                        <th>Qty</th>
                        <th>Rate (Rs.) </th>
                        <th>Discount (%) </th>
                        <th>Amount(After Discount)</th>
                        <th>P&F Chrg. %</th>
                        <th>P&F Amt</th>
                        <th>Cartage Type</th>
                        <th>Cartage Type Rate</th>
                        <th>Cartage Amt.</th>
                        <th>Insurance (%)</th>
                        <th>Ins. Amt.</th>
                        <th>Taxable Amount</th>
                        @if (Model.HeaderData.TCSActive)
                        {
                            if (!taxType.ToLower().Contains("igst"))
                            {
                                <th>CGST (%)</th>
                                <th>SGST/UTGST (%) </th>
                            }
                            else
                            {
                                <th>IGST (%) </th>
                            }
                        }
                        else {
                            <th>CGST (%)</th>
                            <th>SGST/UTGST (%) </th>
                                <th>IGST (%) </th>
                        }
                        @if (Model.HeaderData.TCSActive)
                        {
                            if (!taxType.ToLower().Contains("igst"))
                            {
                                <th>CGST Amt.(Rs.)</th>
                                <th>SGST/UTGST Amt.(Rs.)</th>
                            }
                            else
                            {
                                <th>IGST Amt.(Rs.)</th>
                            }
                        }
                        else {
                            <th>CGST Amt.(Rs.)</th>
                            <th>SGST/UTGST Amt.(Rs.)</th>
                                <th>IGST Amt.(Rs.)</th>
                        }
                        @if (Model.HeaderData.TCSActive)
                        {
                            <th>TCS (%)</th>
                            <th>TCS Amt</th>
                        }
                        <th>Amt(Rs.)</th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var c in Model.ItemData)
                    {


                        <tr>
                            <td rowspan="2"><label>@rowNo</label>   @{ rowNo++; }</td>
                            <td colspan=@cols>
                                @c.ItemName <br />
                                @if (c.ItemDescrp == null)
                                {
                                }
                                else
                                {
                                    @c.ItemDescrp.ToString()
                                }
                            </td>
                            <td>@c.HSNCode</td>
                            <td>@c.ItemNo</td>
                            @if (!Model.HeaderData.TCSActive)
                            {
                                <th>@c.UnitName</th>
                            }
                        </tr>
                        <tr>
                            @if (Model.HeaderData.TCSActive)
                            {
                                <td><b>@c.UnitName</b></td>
                            }
                            <td>@c.Qty</td>
                            <td>@c.Rate</td>
                            <td>@c.Discount</td>
                            <td>@c.ItemToTAmt</td>
                            <td>@c.PackagePercentage</td>
                            <td>@c.PackingPercentageAmt</td>
                            <td>@c.CartageType</td>
                            <td>@c.CartageTypeRate</td>
                            <td>@c.CartageAmt</td>
                            <td>@c.InsurancePercentage</td>
                            <td>@c.InsurancePercentageAmt</td>
                            <td>@c.TaxableAmount</td>
                            @if (Model.HeaderData.TCSActive)
                            {
                                if (!taxType.ToLower().Contains("igst"))
                                {
                                    <td>@c.CGSTPercentage</td>
                                        <td>@c.SGSTAndUTGSTPercentage</td>
                                }
                                else {
                                    <td>@c.IGST</td>
                                }
                            }
                            else {
                                <td>@c.CGSTPercentage</td>
                                    <td>@c.SGSTAndUTGSTPercentage</td>
                                    <td>@c.IGST</td>
                            }
                            @if (Model.HeaderData.TCSActive)
                            {
                                if (!taxType.ToLower().Contains("igst"))
                                {
                                    <td>@c.CGSTAmt</td>
                                        <td>@c.SGSTAndUTGSTAmt</td>
                                }
                                else
                                {
                                    <td>@c.IGSTAmt</td>
                                }
                            }
                            else
                            {
                                <td>@c.CGSTAmt</td>
                                    <td>@c.SGSTAndUTGSTAmt</td>
                                    <td>@c.IGSTAmt</td>
                            }
                            @if (Model.HeaderData.TCSActive)
                            {
                                <td>@c.TCSRate</td>
                                    <td>@c.TCSAmount</td>
                            }
                            <td>@c.GrossAmount</td>
                        </tr>

                                }

                </tbody>




                <tfoot>
